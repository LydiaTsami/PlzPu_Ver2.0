<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gridview_item_show_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="#66FFFFFF"
        android:padding="@dimen/gap_8">

        <LinearLayout
            android:id="@+id/showTitlesLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gridview_item_show_title"
                style="@style/Text.SubText.Bold"
                android:singleLine="true"
                android:text="Show name" />

            <TextView
                android:id="@+id/gridview_item_show_year"
                style="@style/Text.SubText"
                android:singleLine="true"
                android:text="Show year" />

            <TextView
                android:id="@+id/gridview_item_show_watchers_amount"
                style="@style/Text.SubText"
                android:singleLine="true"
                android:text="200 watchers"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
